<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".RegisterActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/btnRegistrarCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="36dp"
        android:text="Registro"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nombre -->
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:gravity="fill_vertical"
        android:text="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRegistrarCuenta" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:hint="Introduce tu nombre..."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNombre"
        app:layout_constraintTop_toBottomOf="@id/btnRegistrarCuenta" />

    <!-- Apellidos -->
    <TextView
        android:id="@+id/tvApellidos"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:gravity="fill_vertical"
        android:text="Apellidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombre" />

    <EditText
        android:id="@+id/etApellidos"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:hint="Introduce tus apellidos..."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvApellidos"
        app:layout_constraintTop_toBottomOf="@id/tvNombre" />

    <!-- Dirección -->
    <TextView
        android:id="@+id/tvDireccion"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:gravity="fill_vertical"
        android:text="Dirección"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvApellidos" />

    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:hint="Introduce tu dirección..."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvDireccion"
        app:layout_constraintTop_toBottomOf="@id/tvApellidos" />

    <!-- Código postal -->
    <TextView
        android:id="@+id/tvCodPostal"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:gravity="fill_vertical"
        android:text="Código postal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDireccion" />

    <EditText
        android:id="@+id/etCodPostal"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:hint="Introduce tu código postal..."
        android:inputType="number"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCodPostal"
        app:layout_constraintTop_toBottomOf="@id/tvDireccion" />

    <!-- Móvil -->
    <TextView
        android:id="@+id/tvMovil"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:gravity="fill_vertical"
        android:text="Móvil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCodPostal" />

    <EditText
        android:id="@+id/etMovil"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:hint="Introduce tu móvil..."
        android:inputType="phone"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvMovil"
        app:layout_constraintTop_toBottomOf="@id/tvCodPostal" />

    <!-- Correo electrónico -->
    <TextView
        android:id="@+id/tvCorreoElec"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:gravity="fill_vertical"
        android:text="Correo electrónico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMovil" />

    <EditText
        android:id="@+id/etCorreoElec"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:hint="Introduce tu correo electrónico..."
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCorreoElec"
        app:layout_constraintTop_toBottomOf="@id/tvMovil" />

    <!-- Contraseña -->
    <TextView
        android:id="@+id/tvContrasena"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:gravity="fill_vertical"
        android:text="Contraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCorreoElec" />

    <EditText
        android:id="@+id/etContrasena"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:hint="Introduce tu contraseña..."
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvContrasena"
        app:layout_constraintTop_toBottomOf="@id/tvCorreoElec" />

    <CheckBox
        android:id="@+id/cbCondiciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Acepto los términos y condiciones del servicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etContrasena" />

    <Button
        android:id="@+id/btnAcceder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completar registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbCondiciones" />

</androidx.constraintlayout.widget.ConstraintLayout>