<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".OfferDetailsActivity">

    <TextView
        android:id="@+id/tvDetalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="36dp"
        android:text="Detalles"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTituloOferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título de la oferta"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetalles" />

    <TextView
        android:id="@+id/tvFechaCreacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oferta creada el XX/XX/XXXX"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTituloOferta"/>

    <TextView
        android:id="@+id/tvDescOferta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/lorem_ipsum"
        app:layout_constraintBottom_toTopOf="@id/rvImagenes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFechaCreacion"
        android:layout_marginTop="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvImagenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/llContenedorInferior"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/llContenedorInferior"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:text="999.999,99€"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:contentDescription="Botón de chat"
            android:text="Perfil"
            app:icon="@drawable/outline_account_circle_black_48dp"
            app:iconGravity="textStart"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnChat"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:contentDescription="Botón de chat"
            android:text="Chat"
            app:icon="@drawable/outline_chat_black_48dp"
            app:iconGravity="textStart"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>